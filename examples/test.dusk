
print("give list of stuff <thing, thing, thing>: ")
let stuff = readln!
let things = split(stuff, ', ')

let printThings = |things| {
    if rest(things) {
        println(first(things))
        printThings(rest(things))
    }
}

printThings(things)

println("[alternately]", join(things, '\n'))

let map = |arr, f| {
    let iter = |arr, acc|{
        if len(arr) == 0: acc
        else {
            iter(rest(arr), push(acc, f(first(arr))))
        }
    }
    iter(arr, [])
}
